<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Event4U</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar-nav {
            flex-grow: 1;
        }

        .nav-item {
            margin-right: 15px;
        }

        .navbar-right {
            margin-left: auto;
            display: flex;
            align-items: center;
        }

            .navbar-right li {
                list-style: none;
                margin-left: 15px;
            }

        .username {
            color: white;
            font-weight: bold;
            margin-right: 10px;
        }

        .right-buttons {
            position: absolute;
            right: 20px;
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- Website Name -->
            @Html.ActionLink("Event4U", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <!-- Navbar Toggle Button for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Events", "Index", "Events", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact Us", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>

                <!-- Right Side (Login/Logout at Extreme Right) -->
                <ul class="navbar-nav right-buttons">
                    @if (Session["UserId"] != null)
                    {
                        <li class="username">@Session["UserName"]</li>
                        <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Users", new { area = "" }, new { @class = "btn btn-danger" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Users", new { area = "" }, new { @class = "btn btn-primary" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Event4U</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
